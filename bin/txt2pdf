#!/bin/bash
#
# Convert a text file to pdf.
#
# Sami Kerola <kerolasa@iki.fi>

SCRIPT_INVOCATION_SHORT_NAME=${0##*/}
set -e
trap 'echo "${SCRIPT_INVOCATION_SHORT_NAME}: exit on error"; exit 1' ERR
set -u
set -o pipefail
RETVAL=0
VERBOSE=0

msg() {
	echo "$SCRIPT_INVOCATION_SHORT_NAME: $@"
}

usage() {
	echo 'Usage:'
	echo " $SCRIPT_INVOCATION_SHORT_NAME file.txt [...]"
	echo ''
	echo 'Options:'
	echo ' -v   verbose, explain what is being done'
	echo ' -V   output version information and exit'
	echo ' -h   display this help and exit'
	exit $1
}

while getopts vhV OPTIONS; do
	case ${OPTIONS} in
		v)
			VERBOSE=1
			;;
		h)
			usage 0
			;;
		V)
			msg '1'
			exit 0
			;;
		*)
			usage 1
	esac
done
shift $((OPTIND-1))

if [ $# -eq 0 ]; then
	usage 1
fi
if [ ! -f "$1" ]; then
	msg "$1 is not a file"
	exit 1
fi

PSFILE=$(mktemp $SCRIPT_INVOCATION_SHORT_NAME.XXXXXXXX.ps)
trap "rm -f $PSFILE" 0

for I in "$@"; do
	if [ ! -f "$I" ]; then
		msg "$I: is not a file"
		RETVAL=1
		continue
	fi
	PDFFILE="${I%.txt}.pdf"
	if [ -f "$PDFFILE" ]; then
		msg "$PDFFILE: exists, skipping conversion"
		RETVAL=1
		continue
	fi
	if [ $VERBOSE -ne 0 ]; then
		msg "$I -> $PDFFILE"
	fi
	enscript -q -B -2 -r -j -p "$PSFILE" "$I"
	ps2pdf "$PSFILE" "$PDFFILE"
done

exit $RETVAL
